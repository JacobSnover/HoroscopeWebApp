
@{
    ViewBag.Title = "SignFinder";
}

<h2>SignFinder</h2>

<div class="container">
    <h2>Registration Form</h2>
    <form action="/Home/Horoscope" method="post" class="form-group" role="form">
        <div class="form-group">
            <label for="First Name">Birth Date</label> 
            <input type="text" class="form-control" id="date" placeholder="Birth Date mm/dd/yyyy" pattern="^[0-9]{2}/[0-9]{2}/[0-9]{4}" name="date" required />
        </div>
           <input type="submit" value="Find Sign" />
    </form>
</div>